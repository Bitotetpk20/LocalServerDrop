{
  "name": "localserverdrop",
  "version": "1.1.1",
  "description": "Local file sharing server and multiplatform electron app",
  "main": "main/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main --watch renderer --watch preload --watch backend --ext html,js,css --exec \"electron .\"",
    "build:css": "npx @tailwindcss/cli -i ./renderer/css/input.css -o ./renderer/css/output.css",
    "build": "npm run build:css && electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "author": "KristupasJon",
  "license": "ISC",
  "dependencies": {
    "express": "^5.1.0",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^4.1.13",
    "nodemon": "^3.1.10"
  },
  "build": {
    "appId": "com.kristupasjon.localserverdrop",
    "productName": "LocalServerDrop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "renderer/**/*",
      "preload/**/*",
      "backend/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "renderer/assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "renderer/assets/icns.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "renderer/assets/favicon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KristupasJon/LocalServerDrop.git"
  },
  "keywords": [
    "localserverdrop"
  ],
  "bugs": {
    "url": "https://github.com/KristupasJon/LocalServerDrop/issues"
  },
  "homepage": "https://github.com/KristupasJon/LocalServerDrop#readme"
}
